<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>br.com.ufc.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TelaInicial</servlet-name>
        <servlet-class>br.com.ufc.servlet.TelaInicial</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EfetuarLogin</servlet-name>
        <servlet-class>br.com.ufc.servlet.EfetuarLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>br.com.ufc.servlet.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FiltroLogin</servlet-name>
        <servlet-class>br.com.ufc.servlet.FiltroLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TelaInicial</servlet-name>
        <url-pattern>/TelaInicial</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EfetuarLogin</servlet-name>
        <url-pattern>/EfetuarLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FiltroLogin</servlet-name>
        <url-pattern>/FiltroLogin</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            10
        </session-timeout>
    </session-config>
</web-app>
